@model Budget.Models.ApplicationUser
@{
    ViewBag.Title = "My Account";
}

<div class="page-body">

    <div class="row">
        <div class="col-md-8">
            <div class="well with-header  with-footer">
                <div class="header bg-blue">
                    User Account
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <section id="useraccount">

                            <form method="post" action="UserAccount" class="form-horizontal">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <div class="form-group">
                                    <label class="col-md-3 control-label">User Name  </label>
                                    @*<p class="col-md-10">@Model.UserName</p>*@
                                    
                                    <input class="col-md-9" type="text" name="userName" value="@Model.UserName" />
                                    
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"> Name  </label>
                                    @*<p class="col-md-10">@Model.Name</p>*@
                                    
                                    <input class="col-md-9" type="text" name="name" value="@Model.Name" />
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-12"> </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4"> </div>
                                    <div class="form-group">
                                        <button style="margin: 10px" class="col-md-2 btn btn-blue" type="submit">Update</button>
                                    </div>
                                </div>
                            </form>

                            <br />
                            <p class="col-md-offset-4 col-md-6">
                                @Html.ActionLink("Change Password", "ChangePassword", "Manage")
                            </p>

                        </section>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
