                        <!-- Settings -->
                    </div>
                </div>
                <!-- /Account Area and Settings -->
            </div>
        </div>
    </div>
    <!-- /Navbar -->

    <!-- Main Container -->
    <div class="main-container container-fluid">
        <!-- Page Container -->
        <div class="page-container">

            <!-- Page Sidebar -->
            <div class="page-sidebar" id="sidebar">
                <!-- Page Sidebar Header-->
                <div>
                    <label> </label> 
                </div>
                <!-- /Page Sidebar Header -->
                <!-- Sidebar Menu -->
                <ul class="nav sidebar-menu">
                    <!--Dashboard-->
                    <li class="active">
                        <a href="@Url.Action("Dashboard", "home")">
                            <i class="menu-icon fa fa-dashboard"></i>
                            <span class="menu-text"> Dashboard </span>
                        </a>
                    </li>
                    <!--Group / Household-->
                    <li> <!-- class={ViewContext.RouteData.Values["action"].ToString() == "Household" ? "active" : ""}-->
                        <a href="@Url.Action("Household", "home")">
                            <i class="menu-icon fa fa-users"></i>
                            <span class="menu-text"> Group </span> 
                        </a>
                    </li>
                    <!--Accounts-->
                    <li>
                        <a href="@Url.Action("Index", "Accounts")">
                            <i class="menu-icon fa fa-bank"></i>
                            <span class="menu-text"> Accounts </span>
                        </a>
                    </li>
                    <!--Transactions-->
                    <li>
                        <a href="@Url.Action("TransByType", "Transactions")">
                            <i class="menu-icon fa fa-credit-card"></i>
                            <span class="menu-text"> Transactions </span>
                        </a>
                    </li>
                    <!--BudgetItems-->
                    <li>
                        <a href="@Url.Action("Index","BudgetItems")" class="menu-dropdown">
                            <i class="menu-icon fa fa-th-list"></i>
                            <span class="menu-text"> Budget Items</span>
                        </a>
                    </li>
                    <!--Budgets-->
                    <li>
                        <a href="@Url.Action("Index","Budgets")" class="menu-dropdown">
                            <i class="menu-icon fa fa-bar-chart-o"></i>
                            <span class="menu-text"> Budget </span>
                        </a>
                    </li>
                </ul>
                <!-- /Sidebar Menu -->
            </div>
            

            <div class="page-content">
                @RenderBody()
            </div>
        </div>
        
        @*<div class=" body-content">

            <hr />
